{
  "name": "selflow-daemon",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "cmd/selflow-daemon",
  "targets": {
    "recreate-daemon": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "go run github.com/selflow/selflow/cmd/selflow-cli recreate-daemon"
        ],
        "parallel": false
      },
      "dependsOn": ["docker"]
    },
    "build": {
      "executor": "@nx-go/nx-go:build",
      "options": {
        "outputPath": "dist/selflow-daemon",
        "main": "./cmd/selflow-daemon"
      }
    },
    "serve": {
      "executor": "@nx-go/nx-go:serve",
      "options": {
        "main": "cmd/selflow-daemon/main.go"
      }
    },
    "test": {
      "executor": "@nx-go/nx-go:test"
    },
    "lint": {
      "executor": "@nx-go/nx-go:lint"
    },
    "docker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f ./cmd/selflow-daemon/Dockerfile -t selflow-daemon ."
      }
    }
  },
  "tags": ["type:cmd"]
}
