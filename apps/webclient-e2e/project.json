{
  "name": "webclient-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/webclient-e2e/src",
  "projectType": "application",
  "targets": {
    "recreate-daemon": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "go run github.com/selflow/selflow/cmd/selflow-cli recreate-daemon"
        ],
        "parallel": false
      },
      "dependsOn": ["^docker"]
    },
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "apps/webclient-e2e/cypress.config.ts",
        "devServerTarget": "webclient:serve:development",
        "testingType": "e2e"
      },
      "configurations": {
        "production": {
          "devServerTarget": "webclient:serve:production"
        }
      },
      "dependsOn": ["recreate-daemon"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/webclient-e2e/**/*.{js,ts}"]
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["webclient", "selflow-daemon"]
}
