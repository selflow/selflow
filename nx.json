{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "selflow",
  "affected": {
    "defaultBase": "main"
  },
  "implicitDependencies": {
    "go.sum": ["*"]
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "test",
          "e2e",
          "build-storybook"
        ],
        "accessToken": "ZDMzMmMwZTQtOTJhYi00NjA4LTlkYmEtNWQzZWYxZWNlZGFhfHJlYWQ="
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"]
    },
    "test": {
      "inputs": ["default", "^default", "{workspaceRoot}/jest.preset.js"]
    }
  },
  "plugins": ["@nx-go/nx-go"],
  "generators": {
    "@nx/react": {
      "application": {
        "babel": true
      },
      "library": {
        "unitTestRunner": "jest"
      }
    },
    "@nx/next": {
      "application": {
        "style": "none",
        "linter": "eslint"
      }
    }
  }
}
